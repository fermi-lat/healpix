package healpix

version v0

#$Id: requirements,v 1.1.1.1 2007/05/15 23:22:21 burnett Exp $

author  T. Burnett <tburnett@u.washington.edu>

use astro *
 
apply_pattern package_include
apply_pattern package_linkopts
apply_pattern package_stamps


private

macro source *.cxx WIN32 "*.h *.cxx"
library healpix -no_share \
 -s=../healpix $(source) \
 -s=../src $(source) \
 -s=base $(source) *.cc *.c

# suppress warning about openmp pragma
macro_append healpix_cppflags "" WIN32 " /wd4068"
private

application test_healpix -s=test *.cxx *.h